<!-- ツイートの一覧を表示するページ -->


<p id="notice"><%= notice %></p>

<h2>全てのTweets</h2>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>user_id</th>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.user_id %></td>
        <td><%= link_to tweet.user.username, user_path(tweet.user_id) %></td>
        <td><%= tweet.text %></td>
        <td><%== simple_time(tweet.created_at) %></td>
        <td><%= link_to 'Show', tweet %></td>
        <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
        <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td id="like-of-<%= tweet.id %>">
        <%= render partial: 'likes/like', locals: { tweet: tweet } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

